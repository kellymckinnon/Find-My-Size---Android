<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kelly.findmysize"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light" >
        <activity
            android:name="com.kelly.findmysize.GenderMenu"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.kelly.findmysize.StoreMenu"
            android:label="@string/title_activity_store_menu"
            android:parentActivityName="com.kelly.findmysize.GenderMenu" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kelly.findmysize.GenderMenu" />
        </activity>
        <activity
            android:name="com.kelly.findmysize.FemaleMeasurements"
            android:label="@string/title_activity_female_measurements"
            android:parentActivityName="com.kelly.findmysize.GenderMenu" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kelly.findmysize.GenderMenu" />
        </activity>
        <activity
            android:name="com.kelly.findmysize.MaleMeasurements"
            android:label="@string/title_activity_male_measurements"
            android:parentActivityName="com.kelly.findmysize.GenderMenu" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kelly.findmysize.GenderMenu" />
        </activity>
        <activity
            android:name="com.kelly.findmysize.ChildMeasurements"
            android:label="@string/title_activity_child_measurements"
            android:parentActivityName="com.kelly.findmysize.GenderMenu" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kelly.findmysize.GenderMenu" />
        </activity>
        <activity
            android:name="com.kelly.findmysize.SizeCalculator"
            android:label="@string/title_activity_size_calculator"
            android:parentActivityName="StoreMenu" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="StoreMenu" />
        </activity>
    </application>

</manifest>
