<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose your store." />

        <Button
            android:id="@+id/buttonAbercrombie"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="setAbercrombie"
            android:text="Abercrombie &amp; Fitch" />

        <Button
            android:id="@+id/buttonAeropostale"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="setAeropostale"
            android:text="AÃ©ropostale" />

        <Button
            android:id="@+id/buttonAmericanApparel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="setAA"
            android:text="American Apparel" />

        <Button
            android:id="@+id/buttonAmericanEagle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="setAE"
            android:text="American Eagle Outfitters" />

        <Button
            android:id="@+id/buttonDelias"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="setDelias"
            android:text="dELiA*s" />

        <Button
            android:id="@+id/buttonForever21"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="setF21"
            android:text="Forever 21" />

        <Button
            android:id="@+id/buttonGap"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="setGap"
            android:text="Gap Inc." />

        <Button
            android:id="@+id/buttonGlamourKills"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="setGK"
            android:text="Glamour Kills" />

        <Button
            android:id="@+id/buttonHM"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="setHM"
            android:text="H&amp;M" />

        <Button
            android:id="@+id/buttonJustice"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="setJustice"
            android:text="Justice" />

        <Button
            android:id="@+id/buttonTillys"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="setTillys"
            android:text="Tilly&apos;s" />

        <Button
            android:id="@+id/buttonUrban"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="setUO"
            android:text="Urban Outfitters" />

        <Button
            android:id="@+id/buttonVans"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="setVans"
            android:text="Vans" />
    </LinearLayout>

</ScrollView>